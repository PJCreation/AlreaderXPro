<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeCustomAuto" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBack</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppThemeCustomDay" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBack</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppThemeCustomNight" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBack</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppThemeDefault" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBack</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:fastScrollThumbDrawable">@color/colorAccent</item>
        <item name="android:fastScrollTrackDrawable">@color/colorPrimaryDark</item>
        <item name="android:fastScrollOverlayPosition">aboveThumb</item>
        <item name="android:colorButtonNormal">@color/colorAccent</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppThemeEink" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorAccent2</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:hardwareAccelerated">false</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="colorAccent">@color/colorAccent2</item>
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimary2</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
